{
    "configuration": {
        "status": "INFO",
        "name": "JSONConfigDemo",
        "ThresholdFilter": {
            "level": "debug"
        },
        "appenders": {
            "Console": [
                {
                    "name": "STDOUT",
                    "PatternLayout": {
                        "pattern": "%d [%t] %-5p %c - %m%n"
                    }
                },{
                    "name": "JSON",
                    "JSONLayout": {
                        "compact": "false",
                        "properties": "true",
                        "propertiesAsList": "false",
                        "includeTimeMillis": "true",
                        "KeyValuePair":[
                            { "key": "timestamp", "value": "${date:yyyy-MM-dd'T'HH:mm:ss.SSSZ}"},
                            { "key": "docker.containerId",  "value": "${docker:containerId:-NoDocker}"},
                            { "key": "docker.containerName",  "value": "${docker:containerName:-NoDocker}"},
                            { "key": "docker.imageName",  "value": "${docker:imageName:-NoDocker}"},
                            { "key": "docker.imageId",  "value": "${docker:imageId:-NoDocker}"},
                            { "key": "kubernetes.clusterName",  "value": "${kubernetes:clusterName:-NoKubernetes}"},
                            { "key": "kubernetes.host",  "value": "${kubernetes:host:-NoKubernetes}"},
                            { "key": "kubernetes.hostIp",  "value": "${kubernetes:hostIp:-NoKubernetes}"},
                            { "key": "kubernetes.podId",  "value": "${kubernetes:podId:-NoKubernetes}"},
                            { "key": "kubernetes.podIp",  "value": "${kubernetes:podIp:-NoKubernetes}"},
                            { "key": "kubernetes.podName",  "value": "${kubernetes:podName:-NoKubernetes}"},
                            { "key": "kubernetes.namespaceName",  "value": "${kubernetes:namespaceName:-NoKubernetes}"},
                            { "key": "kubernetes.imageId",  "value": "${kubernetes:imageId:-NoKubernetes}"},
                            { "key": "kubernetes.imageName",  "value": "${kubernetes:imageName:-NoKubernetes}"}
                        ]
                        
                    }
                }
            ]
        },
        "loggers": {
            "root": {
                "level": "debug",
                "AppenderRef": {
                    "ref": "JSON"
                }
            }
        }
    }
}
